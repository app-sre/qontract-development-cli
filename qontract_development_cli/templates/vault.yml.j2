services:
  vault:
    container_name: vault
    platform: linux/amd64
    image: {{ profile.settings.vault_image }}
    environment:
    - VAULT_ADDR=http://127.0.0.1:8200
    - VAULT_TOKEN=root
    - VAULT_DEV_ROOT_TOKEN_ID=root
    - VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
    ports:
    - 8200:8200
